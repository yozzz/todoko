<% content_for :title, "Editing list" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing list</h1>

  <%= render "form", list: @list %>

  <%= render Ui::ButtonComponent.new(variant: :secondary, full_width_mobile: true, href: @list, class: "mt-2 sm:mt-0 sm:ml-2") do %>
    Show this list
  <% end %>
  <%= render Ui::ButtonComponent.new(variant: :secondary, full_width_mobile: true, href: lists_path, class: "mt-2 sm:mt-0 sm:ml-2") do %>
    Back to lists
  <% end %>
</div>
