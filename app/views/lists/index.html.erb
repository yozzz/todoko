<% content_for :title, "Lists" %>

<div class="w-full">
  <%= render Ui::AlertComponent.new(type: :success, message: notice, id: "notice") %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Lists</h1>
    <%= render Ui::ButtonComponent.new(variant: :primary, href: new_list_path) do %>
      New list
    <% end %>
  </div>

  <div id="lists" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @lists.any? %>
      <% @lists.each do |list| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render list %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= render Ui::ButtonComponent.new(variant: :secondary, full_width_mobile: true, href: list) do %>
              Show
            <% end %>
            <%= render Ui::ButtonComponent.new(variant: :secondary, full_width_mobile: true, href: edit_list_path(list)) do %>
              Edit
            <% end %>
            <%= button_to list, method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
              <%= render Ui::ButtonComponent.new(variant: :danger, full_width_mobile: true) do %>
                Destroy
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No lists found.</p>
    <% end %>
  </div>
</div>
